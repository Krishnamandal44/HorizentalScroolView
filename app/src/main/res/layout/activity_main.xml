<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rayan.avik.horizentalscroolview.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="7"
        android:background="#e4e3e3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18dp"
            android:background="#b7b6b6"
            android:textStyle="bold"
            android:text="Day"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Mon"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Tue"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Wed"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Thu"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Fri"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Sat"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                android:id="@+id/timeLayout"
                layout="@layout/time_layout"/>

                <include
                    android:id="@+id/timeLayout"
                    layout="@layout/monday_class"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"/>

                <include
                    android:id="@+id/timeLayout"
                    layout="@layout/tue_class"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"/>

                <include
                    android:id="@+id/timeLayout"
                    layout="@layout/wed_class"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"/>

                <include
                    android:id="@+id/timeLayout"
                    layout="@layout/thu_class"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"/>

                <include
                    android:id="@+id/timeLayout"
                    layout="@layout/fri_class"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"/>

                <include
                    android:id="@+id/timeLayout"
                    layout="@layout/sat_class"/>

            </LinearLayout>
            </HorizontalScrollView>


    </LinearLayout>

</LinearLayout>


</LinearLayout>
